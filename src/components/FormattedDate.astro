---
interface Props {
	date: Date;
	lang?: 'ja' | 'en';
}

const { date, lang = 'ja' } = Astro.props;
const locale = lang === 'en' ? 'en-us' : 'ja-jp';
---

<time datetime={date.toISOString()}>
	{
		date.toLocaleDateString(locale, {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>

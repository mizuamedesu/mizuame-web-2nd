---
// components/Banner.astro
export interface Banner {
  src: string;
  alt: string;
  href: string;
  title?: string;
}

export interface Props {
  banners: Banner[];
}

const { banners } = Astro.props;
---

{banners && banners.length > 0 && (
  <section class="banner-section" data-animate>
    <div class="banner-header">
      <span class="banner-label">05</span>
      <span class="banner-label-text">LINKS</span>
    </div>
    <h3 class="banner-title">バナー</h3>
    <p class="banner-subtitle">相互リンク募集中</p>
    <div class="banner-grid">
      {
        banners.map((banner, index) => (
          <a
            href={banner.href}
            class="banner-link"
            title={banner.title || banner.alt}
            target="_blank"
            rel="noopener noreferrer"
            style={`--delay: ${index * 0.1}s`}
          >
            <img
              src={banner.src}
              alt={banner.alt}
              class="banner-image"
              loading="lazy"
            />
          </a>
        ))
      }
    </div>
  </section>
)}

<style>
  .banner-section {
    padding: 4rem 0;
  }

  .banner-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .banner-label {
    font-size: 0.75rem;
    font-weight: 900;
    color: white;
    background: #4ECDC4;
    padding: 0.25em 0.5em;
    border-radius: 4px;
  }

  .banner-label-text {
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.2em;
    color: #4ECDC4;
  }

  .banner-title {
    font-size: clamp(2rem, 8vw, 3rem);
    font-weight: 900;
    margin: 0 0 0.5rem;
    display: inline-block;
    transform: rotate(-2deg);
  }

  .banner-subtitle {
    font-size: 0.875rem;
    color: #888;
    margin: 0 0 2rem;
  }

  .banner-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: flex-start;
    align-items: center;
  }

  .banner-link {
    display: block;
    text-decoration: none;
    background: white;
    padding: 0.75rem;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    opacity: 0;
    transform: translateY(20px);
    animation: bannerIn 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    animation-delay: var(--delay, 0s);
    position: relative;
  }

  @keyframes bannerIn {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @property --border-angle {
    syntax: '<angle>';
    initial-value: 0deg;
    inherits: false;
  }

  .banner-link::after {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 12px;
    padding: 3px;
    background: conic-gradient(from -90deg, #4ECDC4 var(--border-angle), transparent var(--border-angle));
    --border-angle: 0deg;
    transition: --border-angle 0.5s ease-out;
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
  }

  .banner-link:hover::after {
    --border-angle: 360deg;
  }

  .banner-image {
    display: block;
    width: 200px;
    height: 40px;
    object-fit: contain;
    border: none;
  }

  @media (max-width: 768px) {
    .banner-section {
      padding: 2.5rem 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .banner-header {
      gap: 0.5rem;
      margin-bottom: 0.5rem;
      justify-content: center;
    }

    .banner-label,
    .banner-label-text {
      font-size: 0.6rem;
    }

    .banner-title {
      font-size: 1.75rem;
      transform: rotate(0deg);
    }

    .banner-subtitle {
      font-size: 0.75rem;
      margin-bottom: 1rem;
    }

    .banner-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 0.5rem;
      justify-items: center;
    }

    .banner-link {
      padding: 0.4rem;
      width: 100%;
      display: flex;
      justify-content: center;
    }

    .banner-image {
      width: 100%;
      max-width: 120px;
      height: auto;
      aspect-ratio: 5 / 1;
    }
  }

  @media (max-width: 400px) {
    .banner-section {
      padding: 2rem 0;
    }

    .banner-grid {
      gap: 0.4rem;
    }

    .banner-link {
      padding: 0.3rem;
    }

    .banner-image {
      max-width: 100px;
    }
  }
</style>
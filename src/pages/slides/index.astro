import { readdir } from 'fs/promises';
import path from 'path';
import Layout from '../../layouts/SlideLayout.astro';

// public/slides ãƒ•ã‚©ãƒ«ãƒ€ã‹ã‚‰PDFãƒ•ã‚¡ã‚¤ãƒ«ã‚’å–å¾—
const slidesDir = path.join(process.cwd(), 'public/slides');

interface Slide {
  name: string;
  filename: string;
  path: string;
  displayTitle: string;
  date?: string;
}

let slides: Slide[] = [];

try {
  const files = await readdir(slidesDir);
  slides = files
    .filter(file => file.endsWith('.pdf'))
    .map(file => {
      const name = file.replace('.pdf', '');
      // ãƒ•ã‚¡ã‚¤ãƒ«åã‹ã‚‰æ—¥ä»˜ã‚’æŠ½å‡ºï¼ˆYYYY-MM-DDå½¢å¼ï¼‰
      const dateMatch = name.match(/^(\d{4}-\d{2}-\d{2})/);
      const date = dateMatch ? dateMatch[1] : undefined;
      
      // è¡¨ç¤ºç”¨ã‚¿ã‚¤ãƒˆãƒ«ã‚’ç”Ÿæˆï¼ˆæ—¥ä»˜éƒ¨åˆ†ã‚’é™¤å»ã—ã€ãƒã‚¤ãƒ•ãƒ³ã‚’ã‚¹ãƒšãƒ¼ã‚¹ã«ï¼‰
      let displayTitle = name;
      if (date) {
        displayTitle = name.replace(/^\d{4}-\d{2}-\d{2}-?/, '');
      }
      displayTitle = displayTitle.replace(/-/g, ' ').replace(/([a-z])([A-Z])/g, '$1 $2');
      
      return {
        name,
        filename: file,
        path: `/slides/${file}`,
        displayTitle: displayTitle || name,
        date
      };
    })
    .sort((a, b) => {
      // æ—¥ä»˜ãŒã‚ã‚‹å ´åˆã¯æ—¥ä»˜é †ã€ãªã„å ´åˆã¯åå‰é †
      if (a.date && b.date) {
        return b.date.localeCompare(a.date);
      }
      return b.name.localeCompare(a.name);
    });
} catch (error) {
  console.log('slides ãƒ•ã‚©ãƒ«ãƒ€ãŒå­˜åœ¨ã—ãªã„ã‹ã€èª­ã¿å–ã‚Šã§ãã¾ã›ã‚“');
}

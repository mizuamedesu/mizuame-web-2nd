<script>
  document.addEventListener('DOMContentLoaded', async () => {
    // PDF.js ã¯CDNã‹ã‚‰èª­ã¿è¾¼ã¿æ¸ˆã¿ï¼ˆã‚°ãƒ­ãƒ¼ãƒãƒ«ã®pdfjsLibã‚’ä½¿ç”¨ï¼‰
    const pdfjsLib = (window as any).pdfjsLib;
    if (!pdfjsLib) {
      console.error('PDF.js ãŒèª­ã¿è¾¼ã¾ã‚Œã¦ã„ã¾ã›ã‚“');
      return;
    }
    
    // PDF.js worker ã®è¨­å®š
    pdfjsLib.GlobalWorkerOptions.workerSrc = 'https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.11.174/pdf.worker.min.js';
    
    // å„ã‚¹ãƒ©ã‚¤ãƒ‰ã®æœ€åˆã®ãƒšãƒ¼ã‚¸ã®ãƒ—ãƒ¬ãƒ“ãƒ¥ãƒ¼ã‚’ç”Ÿæˆ
    const slideCards = document.querySelectorAll('.slide-card');
    
    for (const card of slideCards) {
      const previewDiv = card.querySelector('.slide-preview');
      const pagesSpan = card.querySelector('.pages-count');
      
      if (!previewDiv) {
        console.warn('ãƒ—ãƒ¬ãƒ“ãƒ¥ãƒ¼è¦ç´ ãŒè¦‹ã¤ã‹ã‚Šã¾ã›ã‚“', card);
        continue;
      }
      
      const filename = previewDiv.getAttribute('data-filename');
      if (!filename) {
        console.warn('ãƒ•ã‚¡ã‚¤ãƒ«åãŒè¦‹ã¤ã‹ã‚Šã¾ã›ã‚“', card);
        continue;
      }
      
      try {
        const pdf = await pdfjsLib.getDocument(`/slides/${filename}`).promise;
        const page = await pdf.getPage(1);
        
        // ãƒšãƒ¼ã‚¸æ•°ã‚’æ›´æ–°
        if (pagesSpan) {
          pagesSpan.textContent = `${pdf.numPages} ãƒšãƒ¼ã‚¸`;
        }
        
        const canvas = document.createElement('canvas');
        const context = canvas.getContext('2d');
        
        if (!context) {
          console.error('Canvas context ã®å–å¾—ã«å¤±æ•—ã—ã¾ã—ãŸ');
          previewDiv.innerHTML = '<div class="error">Canvas ã‚¨ãƒ©ãƒ¼</div>';
          continue;
        }
        
        // ãƒ—ãƒ¬ãƒ“ãƒ¥ãƒ¼ã‚µã‚¤ã‚ºã«åˆã‚ã›ã¦ã‚¹ã‚±ãƒ¼ãƒªãƒ³ã‚°
        const viewport = page.getViewport({ scale: 1.0 });
        const scale = Math.min(350 / viewport.width, 240 / viewport.height);
        const scaledViewport = page.getViewport({ scale });
        
        canvas.height = scaledViewport.height;
        canvas.width = scaledViewport.width;
        
        await page.render({
          canvasContext: context,
          viewport: scaledViewport
        }).promise;
        
        previewDiv.innerHTML = '';
        previewDiv.appendChild(canvas);
        
      } catch (error) {
        console.error(`ãƒ—ãƒ¬ãƒ“ãƒ¥ãƒ¼ç”Ÿæˆã‚¨ãƒ©ãƒ¼ (${filename}):`, error);
        if (previewDiv) {
          previewDiv.innerHTML = '<div class="error">ãƒ—ãƒ¬ãƒ“ãƒ¥ãƒ¼èª­ã¿è¾¼ã¿ã‚¨ãƒ©ãƒ¼</div>';
        }
      }
    }
  });
</script>
import { readFile } from "fs/promises";
import path from "path";
import { existsSync } from "fs";
import Layout from "../../layouts/SlideLayout.astro";

interface Slide {
  name: string;
  filename: string;
  path: string;
  displayTitle: string;
  date?: string;
  thumbnail?: string;
  numPages?: number;
}

let slides: Slide[] = [];

try {
  // ãƒ¡ã‚¿ãƒ‡ãƒ¼ã‚¿ãƒ•ã‚¡ã‚¤ãƒ«ã‚’èª­ã¿è¾¼ã‚€
  const metadataPath = path.join(process.cwd(), "public/slides/metadata.json");

  if (!existsSync(metadataPath)) {
    console.log("ãƒ¡ã‚¿ãƒ‡ãƒ¼ã‚¿ãƒ•ã‚¡ã‚¤ãƒ«ãŒå­˜åœ¨ã—ã¾ã›ã‚“ã€‚ãƒ“ãƒ«ãƒ‰ã‚¹ã‚¯ãƒªãƒ—ãƒˆã‚’å®Ÿè¡Œã—ã¦ãã ã•ã„ã€‚");
  } else {
    const metadataContent = await readFile(metadataPath, "utf-8");
    const metadata = JSON.parse(metadataContent);

    slides = Object.values(metadata)
      .map((item: any) => {
        const name = item.name;

        // ãƒ•ã‚¡ã‚¤ãƒ«åã‹ã‚‰æ—¥ä»˜ã‚’æŠ½å‡ºï¼ˆYYYY-MM-DDå½¢å¼ ã¾ãŸã¯ YYYYMMDDå½¢å¼ï¼‰
        let date: string | undefined = undefined;
        let displayTitle = name;

        // YYYY-MM-DD å½¢å¼ã‚’ãƒã‚§ãƒƒã‚¯
        const dateMatchHyphen = name.match(/^(\d{4}-\d{2}-\d{2})/);
        if (dateMatchHyphen) {
          date = dateMatchHyphen[1];
          displayTitle = name.replace(/^\d{4}-\d{2}-\d{2}-?/, "");
        } else {
          // YYYYMMDD å½¢å¼ã‚’ãƒã‚§ãƒƒã‚¯
          const dateMatchNoHyphen = name.match(/^(\d{8})/);
          if (dateMatchNoHyphen) {
            const rawDate = dateMatchNoHyphen[1];
            // YYYY-MM-DD å½¢å¼ã«å¤‰æ›
            date = `${rawDate.slice(0, 4)}-${rawDate.slice(4, 6)}-${rawDate.slice(6, 8)}`;
            displayTitle = name.replace(/^\d{8}-?/, "");
          }
        }

        // è¡¨ç¤ºç”¨ã‚¿ã‚¤ãƒˆãƒ«ã‚’æ•´å½¢ï¼ˆãƒã‚¤ãƒ•ãƒ³ã‚’ã‚¹ãƒšãƒ¼ã‚¹ã«ã€ã‚­ãƒ£ãƒ¡ãƒ«ã‚±ãƒ¼ã‚¹ã‚’åˆ†å‰²ï¼‰
        displayTitle = displayTitle
          .replace(/-/g, " ")
          .replace(/([a-z])([A-Z])/g, "$1 $2");

        return {
          name,
          filename: item.filename,
          path: `/slides/${item.filename}`,
          displayTitle: displayTitle || name,
          date,
          thumbnail: item.thumbnail,
          numPages: item.numPages,
        };
      })
      .sort((a, b) => {
        // æ—¥ä»˜ãŒã‚ã‚‹ã‚‚ã®ã‚’å„ªå…ˆ
        if (a.date && !b.date) return -1;
        if (!a.date && b.date) return 1;

        // ä¸¡æ–¹æ—¥ä»˜ãŒã‚ã‚‹å ´åˆã¯æ—¥ä»˜é †ï¼ˆé™é †ï¼šæ–°ã—ã„é †ï¼‰
        if (a.date && b.date) {
          return b.date.localeCompare(a.date);
        }

        // ä¸¡æ–¹æ—¥ä»˜ãŒãªã„å ´åˆã¯åå‰é †
        return a.name.localeCompare(b.name);
      });
  }
} catch (error) {
  console.log("ãƒ¡ã‚¿ãƒ‡ãƒ¼ã‚¿ã®èª­ã¿è¾¼ã¿ã‚¨ãƒ©ãƒ¼:", error);
}

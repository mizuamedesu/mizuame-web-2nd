---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Banner from "../components/Banner.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { getCollection } from "astro:content";
import BootLoader from "../components/BootLoader.astro";

const customBootText = `
Welcome to mizuame.works Portfolio!

██     ██ ███████  ██████  ██████  ███    ███ ███████ 
██     ██ ██      ██      ██    ██ ████  ████ ██      
██  █  ██ █████   ██      ██    ██ ██ ████ ██ █████   
██ ███ ██ ██      ██      ██    ██ ██  ██  ██ ██      
 ███ ███  ███████  ██████  ██████  ██      ██ ███████ 

root@mizuame.works:~# _
`;

// ブログ記事を取得し、日付順にソートして最新3件を取得
const posts = (await getCollection("blog"))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);

// バナー情報の配列
const banners = [
  {
    src: "banner/mizuame_banner.png",
    alt: "みずあめのポートフォリオ",
    href: "https://mizuame.works/",
    title: "みずあめのポートフォリオ",
  },
  {
    src: "banner/zikannai.png",
    alt: "時間ねぇー",
    href: "https://sites.google.com/view/happy-busy/",
    title: "時間ねぇー",
  },
  {
    src: "banner/powerfulfamily.net_banner.png",
    alt: "豪族.net",
    href: "https://powerfulfamily.net",
    title: "豪族.net",
  },
  {
    src: "banner/whatacotton_banner.png",
    alt: "WhatACottonの備忘録",
    href: "https://blog.whatacotton.com",
    title: "WhatACottonの備忘録",
  },
    {
    src: "banner/tsukuba-love2.png",
    alt: "つくば大好き連合",
    href: "https://love.tsukuba-ac.net",
    title: "つくば大好き連合",
  }
];
---

<!doctype html>
<html lang="ja">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <link
      href="https://fonts.googleapis.com/css2?family=VT323&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <BootLoader bootText={customBootText} />
    <div class="win95-container">
      <div class="win95-window">
        <div class="win95-titlebar">
          <div class="win95-title">みずあめのポートフォリオ</div>
          <div class="win95-controls">
            <button class="win95-btn minimize">_</button>
            <button class="win95-btn maximize">□</button>
            <button class="win95-btn close">×</button>
          </div>
        </div>
        <div class="win95-content">
          <div class="text-section">
            <div class="win95-text large-text">
              そろそろカスのソフトを作るのやめたい
            </div>
          </div>

          <div class="win95-section">
            <div class="win95-section-title">About</div>
            <div class="win95-fieldset">
              <div class="win95-text">本名: 佐藤 良</div>
              <div class="win95-text">所属: 筑波大学情報科学類B2</div>
              <div class="win95-text">肩書き: ソフトウェアエンジニア</div>
              <a href="https://md.mizuame.app/s/eqetPj34C" class="win95-link"
                >詳しくはこちらをご覧ください</a
              >
            </div>
          </div>

          <div class="win95-section">
            <div class="win95-section-title">ブログ</div>
            <div class="win95-fieldset">
              <div class="blog-section">
                <ul>
                  {
                    posts.map((post) => (
                      <li>
                        <a href={`/blog/${post.id}/`}>
                          <div class="win95-blog-item">
                            <h4 class="post-title">{post.data.title}</h4>
                            <p class="post-description">
                              {post.data.description}
                            </p>
                            <p class="post-date">
                              {post.data.pubDate.toLocaleDateString("ja-JP")}
                            </p>
                          </div>
                        </a>
                      </li>
                    ))
                  }
                </ul>

                <div class="view-all-button">
                  <a href="/blog" class="win95-button">ブログ一覧を見る</a>
                </div>
              </div>
            </div>
          </div>

          <div class="win95-section">
            <div class="win95-section-title">スライド</div>
            <div class="win95-fieldset">
              <a href="https://www.docswell.com/user/mizuame" class="win95-link"
                >Docswell</a
              >
            </div>
          </div>

          <div class="win95-section">
            <div class="win95-section-title">コンタクト</div>
            <div class="win95-fieldset">
              <div class="win95-text">hello at mizuame.works</div>
              <div class="win95-button-container">
                <a href="https://mizuame.works/grades" class="win95-button"
                  >成績</a
                >
              </div>
            </div>
          </div>

          <Banner banners={banners} />

          <div class="footer-section">
            <Footer />
          </div>
        </div>
      </div>
    </div>
  </body>
</html>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    margin: 0;
    padding: 0;
    overflow-x: hidden;
    min-height: 100vh;
    background-color: #008080;
    font-family: "MS Sans Serif", "VT323", monospace;
    color: #000;
  }

  .win95-container {
    position: relative;
    width: 100%;
    min-height: 100vh;
    padding: 20px;
    display: flex;
    justify-content: center;
    align-items: flex-start;
  }

  .win95-window {
    width: 100%;
    max-width: 800px;
    background-color: #c0c0c0;
    border: 2px solid #000;
    box-shadow:
      inset 1px 1px #dfdfdf,
      inset -1px -1px #0a0a0a,
      1px 1px #000;
  }

  .win95-titlebar {
    height: 22px;
    background: linear-gradient(90deg, #000080, #1084d0);
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 2px;
  }

  .win95-title {
    font-weight: bold;
    padding-left: 4px;
    user-select: none;
  }

  .win95-controls {
    display: flex;
  }

  .win95-btn {
    width: 16px;
    height: 14px;
    margin-left: 2px;
    background-color: #c0c0c0;
    border: none;
    border-top: 1px solid #fff;
    border-left: 1px solid #fff;
    border-right: 1px solid #000;
    border-bottom: 1px solid #000;
    box-shadow:
      inset 1px 1px #dfdfdf,
      inset -1px -1px #808080;
    font-size: 8px;
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
  }

  .win95-content {
    padding: 10px;
    background-color: #c0c0c0;
  }

  .text-section {
    width: 100%;
    text-align: center;
    padding: 1rem 0;
    background-color: #c0c0c0;
  }

  .win95-text {
    margin-bottom: 0.5rem;
    font-size: 1.2rem;
  }

  .large-text {
    font-size: 1.5rem;
  }

  .win95-link {
    color: #0000ff;
    text-decoration: underline;
  }

  .win95-section {
    margin: 15px 0;
  }

  .win95-section-title {
    font-weight: bold;
    font-size: 1.2rem;
    margin-bottom: 5px;
  }

  .win95-fieldset {
    border: 2px solid;
    border-color: #808080 #ffffff #ffffff #808080;
    padding: 10px;
    background-color: #c0c0c0;
  }

  .blog-section {
    width: 100%;
  }

  .blog-section ul {
    list-style: none;
    padding: 0;
  }

  .blog-section li {
    margin-bottom: 0.8rem;
  }

  .blog-section a {
    text-decoration: none;
    color: inherit;
  }

  .win95-blog-item {
    padding: 10px;
    border: 2px solid;
    border-color: #ffffff #808080 #808080 #ffffff;
    background-color: #c0c0c0;
  }

  .win95-blog-item:hover {
    background-color: #efefef;
  }

  .post-title {
    font-size: 1.1rem;
    margin-bottom: 0.3rem;
    color: #000;
  }

  .post-description {
    color: #333;
    margin-bottom: 0.3rem;
    line-height: 1.3;
  }

  .post-date {
    font-size: 0.8rem;
    color: #666;
  }

  .win95-button-container {
    display: flex;
    justify-content: center;
    margin-top: 10px;
  }

  .win95-button,
  .view-all-button a {
    display: inline-block;
    background-color: #c0c0c0;
    color: #000;
    padding: 5px 10px;
    border: 2px solid;
    border-color: #ffffff #808080 #808080 #ffffff;
    font-size: 1rem;
    cursor: pointer;
    text-decoration: none;
    text-align: center;
  }

  .win95-button:active,
  .view-all-button a:active {
    border-color: #808080 #ffffff #ffffff #808080;
  }

  .view-all-button {
    text-align: center;
    margin-top: 1rem;
  }

  .footer-section {
    margin-top: 1.5rem;
    padding-top: 10px;
    border-top: 2px solid;
    border-color: #808080 #ffffff #ffffff #808080;
  }
</style>

---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import VRMViewer from "../components/VRMViewer.astro";
import AnimatedTextReveal from "../components/AnimatedTextReveal.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <div class="container">
      <div class="vrm-section">
        <VRMViewer />
      </div>
      <div class="text-section">
        <AnimatedTextReveal text="Hello,World" textSize="3rem" space = "10rem" />
		<AnimatedTextReveal text="こんにちは、みずあめです" textSize="1.5rem" space = "1rem" />
		<AnimatedTextReveal text="Astroで全部描き直しました" textSize="1.5rem" space = "1rem" />

      </div>
      <div class="footer-section">
        <Footer />
      </div>
    </div>
  </body>
</html>

<style>
  /* リセットCSS */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    margin: 0;
    padding: 0;
    overflow-x: hidden;
    min-height: 100vh;
  }

  .container {
    position: relative;
    width: 100%;
    height: 100vh;
    display: grid;
    grid-template-rows: auto 1fr auto;
  }

  .vrm-section {
    width: 100%;
    height: 100%;
  }

  .text-section {
    width: 100%;
    text-align: center;
    padding: 2rem 0;
  }

  .footer-section {
    width: 100%;
    padding: 1rem 0;
  }

  h1 {
    position: absolute;
    top: 1rem;
    left: 1rem;
    z-index: 1;
    color: #333;
  }
</style>
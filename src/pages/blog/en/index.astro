---
import BaseHead from '../../../components/BaseHead.astro';
import Footer from '../../../components/Footer.astro';
import BlogToggleBar from '../../../components/BlogToggleBar.astro';
import { getCollection } from 'astro:content';
import FormattedDate from '../../../components/FormattedDate.astro';
import '../../../styles/blog-theme.css';

const lang = 'en';
const SITE_TITLE = "Mizuame's Portfolio";
const SITE_DESCRIPTION = 'Portfolio website';

// 英語記事のみを取得（en/で始まるもの）
const posts = (await getCollection('blog'))
	.filter((post) => post.id.startsWith('en/'))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<!doctype html>
<html lang={lang} data-blog-page>
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<!-- Google AdSense Script -->
		<script
			async
			src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-9132595658588908"
			crossorigin="anonymous"></script>
		<style>
			body {
				background-color: var(--blog-bg);
			}
			main {
				width: 960px;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
			}
			ul li:first-child img {
				width: 100%;
				max-width: 600px;
			}
			ul li:first-child .title {
				font-size: 2.369rem;
			}
			ul li img {
				width: 100%;
				max-width: 360px;
				height: auto;
				margin-bottom: 0.5rem;
				border-radius: 12px;
				box-shadow: 0 4px 6px rgba(0, 0, 0, 0.4);
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: var(--blog-text);
				line-height: 1;
			}
			.date {
				margin: 0;
				color: var(--blog-text-muted);
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: var(--blog-link);
			}
			ul a:hover img {
				box-shadow: var(--blog-shadow);
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
			}
			.back-to-top {
				text-align: center;
				margin-top: 2em;
				margin-bottom: 2em;
			}
			.back-to-top a {
				display: inline-block;
				padding: 0.75em 1.5em;
				background: var(--blog-link);
				color: #ffffff;
				border-radius: 8px;
				text-decoration: none;
				font-size: 1rem;
				font-weight: bold;
			}
			.back-to-top a:hover {
				background: var(--blog-link-hover);
			}
			.no-posts {
				text-align: center;
				padding: 3rem 1rem;
				color: var(--blog-text-muted);
			}
		</style>
	</head>
	<body>
		<BlogToggleBar currentLang={lang} />
		<main>
			<section>
				{posts.length > 0 ? (
					<ul>
						{posts.map((post) => (
							<li>
								<a href={`/blog/en/${post.id.replace('en/', '')}/`}>
									<img width={720} height={360} src={post.data.heroImage} alt="" />
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} lang="en" />
									</p>
								</a>
							</li>
						))}
					</ul>
				) : (
					<div class="no-posts">
						<p>No English articles available yet.</p>
						<p><a href="/blog/">View Japanese articles</a></p>
					</div>
				)}
			</section>
			<div class="back-to-top">
				<a href="/">Back to Top</a>
			</div>
		</main>
		<Footer />
	</body>
</html>
